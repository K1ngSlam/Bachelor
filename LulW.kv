WindowManager:
    MainWindow:
    SettingsWindow:

<MainWindow>:
    name: "MainWindow"
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint: 0.5,.05
            orientation: "horizontal"
            Button:
                id: create_md
                text: "Create Markdown file"
                on_press: root.create_markdown()
            Button:
                id: mainpage_settings
                text: "Settings"
                on_press:
                    app.root.current = "MainSettings"
                    root.manager.transition.direction = "left"

        BoxLayout:
            orientation:"horizontal"

            BoxLayout:
                id: md_files
                size_hint: .3,1
                orientation: "vertical"
                Button:
                    text:"First Markdown file"
                Button:
                    text:"Second Markdown file"


            BoxLayout:
                TextInput:
                    id: md_text_field
                    text:"Hello"

<SettingsWindow>
    name: "MainSettings"
    BoxLayout:
        Button:
            text: "Back"
            on_press:
                app.root.current = "MainWindow"
                root.manager.transition.direction = "right"

        Label:
            text:"Change Markdown Directory"

        TextInput:
            id: set_md_directory
            multiline: False
            on_text_validate: root.change_md_directory_path()




