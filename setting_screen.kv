#: import MainScreen setting_screen.SettingScreen

SettingScreen:
    name: "MainSettings"
    md_bg_color: 0, 0, 0 ,1

    MDFloatLayout:
        md_bg_color: 0, 0, 0, 1
        line_color: 127, 0, 255, 1
        size_hint: 0.9, 0.9
        pos_hint: {"x": 0.05, "y": 0.05}
        MDLabel:
            text: "Change the directory to search for the .md-files"
            pos_hint: {"x": 0.27, "y": 0.12}

        MDTextField:
            id: set_md_directory
            pos_hint: {"x": 0.27, "y": 0.5}
            size_hint: 0.5, 0.1
            on_text_validate: root.change_directory_path()

    MDToolbar:
        pos_hint: { "x": 0,"y": 0.925 }
        size_hint: 1,0.075
        title: "Settings"
        left_action_items: [["arrow-left", lambda x: app.switch_to_screen(0,"right") ],["more", lambda x: root.menu_open(x)] ]