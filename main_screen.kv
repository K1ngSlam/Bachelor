#: import MainScreen main_screen.MainScreen
#: import CustomeCodeInput custom_code_input.CustomCodeInput

MainScreen:
    name: "MainScreen"

    MDBoxLayout:
        orientation: "vertical"
        MDToolbar:
            size_hint: 1,0.075
            title: "SCRIBLER"
            left_action_items: [["refresh", lambda x: root.refresh()]]
            right_action_items: [["file-plus", lambda x: root.create_markdown(), "Adding a default MarkDown-file"],["wrench", lambda x:  app.switch_to_screen(1),"Settings"]]


        MDBoxLayout:
            orientation: "horizontal"
            MDBoxLayout:
                id: tree_views
                size_hint: .3,1
                orientation: "vertical"
            MDBoxLayout:
                CustomCodeInput:
                    id: box_for_codeinput
                    text: "This is a Node"
