#: import MainScreen main_screen.MainScreen
#: import CustomeCodeInput custom_code_input.CustomCodeInput
<TreeViewThreeLineAvatarListItem>:
    IconLeftWidget:
        icon: root.icon
    ImageLeftWidget:
        source: root.source
MainScreen:
    name: "MainScreen"

    MDBoxLayout:
        id: tool_bar
        orientation: "vertical"
        MDToolbar:
            size_hint: 1,0.075
            title: "SCRIBLER"
            left_action_items: [["refresh", lambda x: root.refresh()]]
            right_action_items: [["file-plus", lambda x: root.create_markdown(), "Adding a default MarkDown-file"],["wrench", lambda x:  app.switch_to_screen(1),"Settings"]]


        MDBoxLayout:
            orientation: "horizontal"

            MDBoxLayout:
                id: side_panel
                orientation: "vertical"
                size_hint: .3,1

                MDBoxLayout:
                    id: search_layout
                    adaptive_height: True
                    orientation: "horizontal"
                    MDIconButton:
                        icon: "note-search"
                    MDTextField:
                        id: search_field
                        color_mode: "accent"
                        on_text_validate: root.refresh()
                        size_hint: 1,1
                MDBoxLayout:
                    id: tree_views
                    orientation: "vertical"



            MDBoxLayout:
                orientation: "vertical"
                MDFloatLayout:
                    size_hint: 1, 0.1
                    MDButtonLabel:
                        id: md_header_label
                        markup: True
                        pos_hint: {"x": 0, "y": .00}
                        font_size: 22
                        size_hint: (1,1)
                        on_release: root.activate_header_change()

                    TextInput:
                        id: md_header_input
                        text: root.ids.md_header_label.text
                        font_size: 22
                        disabled: True
                        opacity: 0
                        size_hint: (1,1)
                        pos_hint: {"x": 0, "y": .00}
                        multiline: False
                        on_text_validate: root.header_change()

                MDBoxLayout:
                    size_hint: 1, None
                    size: (self.height,self.minimum_height)
                    orientation: "horizontal"
                    id: chip_tags


                CustomCodeInput:
                    id: box_for_codeinput
                    text: "This is a Node"
