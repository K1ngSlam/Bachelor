#: import MainScreen main_screen.MainScreen

MainScreen:
    name: "MainScreen"
    MDBoxLayout:
        orientation: "vertical"
        MDBoxLayout:
            size_hint: 0.5,.05
            orientation: "horizontal"
            MDRaisedButton:
                id: create_md
                text: "Create Markdown file"
                on_press: root.create_markdown()
            MDRaisedButton:
                id: mainpage_settings
                text: "Settings"
                on_press:
                    app.root.current = "MainSettings"
                    root.manager.transition.direction = "left"

        MDBoxLayout:
            orientation: "horizontal"

            MDBoxLayout:
                id: tree_views
                size_hint: .3,1
                orientation: "vertical"



            MDBoxLayout:
                CodeInput:
                    id: box_for_codeinput
                    text: "This is a Node"
                    on_focus: root.on_focus(self,self.focus)